# ============================================
# APP CONFIG
# ============================================
APP_NAME=SmartControl
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# ============================================
# SERVER
# ============================================
HOST=0.0.0.0
PORT=8000
WORKERS=1
RELOAD=true

# ============================================
# SECURITY
# ============================================
SECRET_KEY=your-super-secret-key-min-32-chars-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
CORS_ORIGINS=http://localhost:3000,http://localhost:5173
CORS_CREDENTIALS=true

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///./smartbjportal.db

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO
LOG_FILE=logs/smartcontrol.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# ============================================
# MIKROTIK DEFAULT
# ============================================
MT_HOST=10.80.0.1
MT_PORT=8728
MT_SSH_PORT=2214
MT_USER=portal
MT_PASS=Porta123!!
MT_USE_SSL=false
MT_SSL_VERIFY=false
MT_TIMEOUT=10

# ============================================
# ADDRESS LISTS
# ============================================
LIST_PERMITIDO=INET_PERMITIDO
LIST_BLOQUEADO=INET_BLOQUEADO

# ============================================
# CIRCUIT BREAKER
# ============================================
CIRCUIT_FAILURE_THRESHOLD=3
CIRCUIT_TIMEOUT_SECONDS=300
CIRCUIT_HALF_OPEN_MAX_CALLS=1

# ============================================
# STATS & REPORTS
# ============================================
STATS_COLLECTION_INTERVAL_MINUTES=60
STATS_RETENTION_DAYS=90
REPORTS_TEMP_DIR=/tmp/smartcontrol_reports

# ============================================
# RATE LIMITING
# ============================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD_SECONDS=60

# ============================================
# BACKUP
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups
